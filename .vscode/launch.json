{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Extension with Fluent UI",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}",
        "--extensionDevelopmentPath=/path/to/NightSky-Studio.vscode-fluent-ui-continued"
      ],
      "outFiles": ["${workspaceFolder}/dist/**/*.js"],
      "preLaunchTask": "${defaultBuildTask}"
    }
  ]
}
